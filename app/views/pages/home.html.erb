
<%= render 'shared/banner' %>

<div class="top_cocktails"></div>
  <h2 align="center">Popular Cocktails</h2>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <%= render 'shared/card', cocktail: cocktail %>
        </div>
      <% end %>
    </div>
  </div>
</div>



